{
  "manifest_version": 3,
  "name": "BGG Price Checker",
  "version": "1.0.0",
  "description": "Compare board game prices from multiple retailers instantly while browsing BoardGameGeek - see real-time pricing, shipping costs, and availability",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://boardgameprices.co.uk/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://boardgamegeek.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "bgg-pricing-icon.png",
      "48": "bgg-pricing-icon.png",
      "128": "bgg-pricing-icon.png"
    }
  },
  "icons": {
    "16": "bgg-pricing-icon.png",
    "48": "bgg-pricing-icon.png",
    "128": "bgg-pricing-icon.png"
  }
}